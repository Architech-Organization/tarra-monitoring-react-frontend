# Application Configuration
VITE_APP_TITLE=Tarra Monitoring System
VITE_APP_DESCRIPTION=Enterprise vibration monitoring system with real-time analytics

# API Configuration
VITE_API_BASE_URL=http://localhost:8000
VITE_API_VERSION=v1
VITE_API_TIMEOUT=30000

# Azure AD Configuration (Microsoft Authentication Library)
VITE_AZURE_CLIENT_ID=your-azure-client-id-here
VITE_AZURE_TENANT_ID=your-azure-tenant-id-here
VITE_AZURE_REDIRECT_URI=http://localhost:3000
VITE_AZURE_SCOPES=openid,profile,email,User.Read

# Security Configuration
VITE_ENABLE_HTTPS=false
VITE_SECURITY_HEADERS_ENABLED=true
VITE_CSP_ENABLED=true

# Feature Flags
VITE_ENABLE_PWA=true
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_ERROR_REPORTING=false
VITE_ENABLE_REAL_TIME_UPDATES=true

# Chart and Visualization Settings
VITE_CHART_UPDATE_INTERVAL=5000
VITE_DATA_REFRESH_INTERVAL=30000
VITE_MAX_DATA_POINTS=1000

# Performance Settings
VITE_ENABLE_SERVICE_WORKER=true
VITE_CACHE_STRATEGY=staleWhileRevalidate
VITE_BUNDLE_ANALYZER=false

# Development Settings
VITE_MOCK_API=false
VITE_DEBUG_MODE=false
VITE_SHOW_DEBUG_PANELS=false

# Logging Configuration
VITE_LOG_LEVEL=warn
VITE_ENABLE_CONSOLE_LOGS=true

# UI Configuration
VITE_DEFAULT_THEME=light
VITE_ENABLE_DARK_MODE=true
VITE_DEFAULT_LANGUAGE=en

# Data Limits
VITE_MAX_SENSORS=100
VITE_MAX_ALERTS=500
VITE_DATA_RETENTION_DAYS=365

# WebSocket Configuration
VITE_WS_ENDPOINT=ws://localhost:8000/ws
VITE_WS_RECONNECT_ATTEMPTS=5
VITE_WS_RECONNECT_INTERVAL=3000

# Notification Settings
VITE_ENABLE_PUSH_NOTIFICATIONS=true
VITE_NOTIFICATION_TIMEOUT=5000

# Maps and Geolocation (if needed for sensor locations)
VITE_ENABLE_MAPS=false
VITE_MAPS_API_KEY=your-maps-api-key-here
VITE_DEFAULT_LOCATION_LAT=0
VITE_DEFAULT_LOCATION_LNG=0

# Production overrides (will be replaced in production builds)
# VITE_API_BASE_URL=https://your-production-api.com
# VITE_AZURE_REDIRECT_URI=https://your-production-domain.com
# VITE_ENABLE_HTTPS=true
# VITE_DEBUG_MODE=false
# VITE_LOG_LEVEL=error
