{
  "name": "tarra-monitoring-react-frontend",
  "version": "1.0.0",
  "description": "Enterprise-grade React frontend for Tarra vibration monitoring system with Azure AD integration and security best practices",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite --host",
    "build": "tsc -b && vite build",
    "preview": "vite preview --host",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "type-check": "tsc --noEmit",
    "security:audit": "npm audit --audit-level moderate",
    "security:check": "npm audit && npx audit-ci --config audit-ci.json",
    "analyze": "npm run build && npx vite-bundle-analyzer dist/stats.html",
    "start": "npm run dev"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.26.1",
    "@azure/msal-browser": "^3.23.0",
    "@azure/msal-react": "^2.0.22",
    "@emotion/react": "^11.13.3",
    "@emotion/styled": "^11.13.0",
    "@mui/material": "^5.16.7",
    "@mui/icons-material": "^5.16.7",
    "@mui/x-charts": "^7.15.0",
    "@mui/x-data-grid": "^7.15.0",
    "@mui/x-date-pickers": "^7.15.0",
    "@mui/lab": "^5.0.0-alpha.174",
    "chart.js": "^4.4.4",
    "react-chartjs-2": "^5.2.0",
    "recharts": "^2.12.7",
    "axios": "^1.7.7",
    "@tanstack/react-query": "^5.54.1",
    "@tanstack/react-query-devtools": "^5.54.1",
    "date-fns": "^3.6.0",
    "lodash": "^4.17.21",
    "react-helmet-async": "^2.0.5",
    "react-hot-toast": "^2.4.1",
    "zustand": "^4.5.5",
    "zod": "^3.23.8",
    "react-hook-form": "^7.53.0",
    "@hookform/resolvers": "^3.9.0",
    "framer-motion": "^11.5.4",
    "react-virtualized": "^9.22.5",
    "dayjs": "^1.11.13"
  },
  "devDependencies": {
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@types/lodash": "^4.17.7",
    "@types/node": "^22.5.4",
    "@types/react-virtualized": "^9.21.30",
    "@typescript-eslint/eslint-plugin": "^8.5.0",
    "@typescript-eslint/parser": "^8.5.0",
    "@vitejs/plugin-react": "^4.3.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.35.2",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.11",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-jsx-a11y": "^6.10.0",
    "eslint-plugin-import": "^2.30.0",
    "@eslint/js": "^9.10.0",
    "prettier": "^3.3.3",
    "typescript": "^5.5.4",
    "vite": "^5.4.4",
    "vite-plugin-pwa": "^0.20.1",
    "vite-plugin-eslint": "^1.8.1",
    "vitest": "^2.0.5",
    "@vitest/ui": "^2.0.5",
    "@vitest/coverage-v8": "^2.0.5",
    "jsdom": "^25.0.0",
    "@testing-library/react": "^16.0.1",
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/user-event": "^14.5.2",
    "msw": "^2.4.2",
    "audit-ci": "^7.1.0",
    "vite-bundle-analyzer": "^0.11.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all",
      "not ie <= 11"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "keywords": [
    "react",
    "typescript",
    "vibration-monitoring",
    "azure-ad",
    "enterprise",
    "security",
    "owasp"
  ]
}
